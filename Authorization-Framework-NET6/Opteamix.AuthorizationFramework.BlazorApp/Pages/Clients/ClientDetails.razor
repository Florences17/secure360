@page "/clientdetails"
@using Opteamix.AuthorizationFramework.BlazorApp.Models

<TopNavbar />
<div class="row mt-5" style="margin-left: 240px; margin-right: 240px;">
    <MenuItems />
    <div class="col-8 item-container">
        <CardLayout Width="1060px" Height="630px" ClassName="pt-3">
            <div class="d-flex justify-content-between mx-5 py-3 align-items-center" style="height: 45px;">
                <label style="font-size: 22px; color: #4E4E4E; font-family: 'Poppins', sans-serif; font-weight: 500; display: flex; margin-right: 20px">Client List</label>
                <CircularButton Id="client-details-edit-button" Width="40px" Height="40px" IconName="fa fa-pencil-alt" onCircularButtonClicked="EditImageButtonClick"/>
            </div>
            <div class="d-flex justify-content-between mt-3 mb-2 mx-5" style="height:75px; margin-right: 115px;">
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Client Name" Value="@Name"/>
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Short Name" Value="@ShortName"/>
            </div>
            <div class="d-flex justify-content-between mx-5" style="height:155px">
                <DisplayDetailImage Image="@ImagePath" AltText="@Name"/>
                <div>
                    <DisplayDetailCard Width="400px" Height="60px" FieldName="Website" Value="@Website"/>
                    <div class="my-4"></div>
                    <DisplayDetailCard Width="400px" Height="60px" FieldName="Email" Value="@Email"/>
                </div>
            </div>
            <div class="d-flex justify-content-between my-3 mx-5">
                <span class="heading-text col-6">Address</span>
                <span class="heading-text col-5">Contact Person Details</span>
            </div>
            <div class="d-flex justify-content-between mt-3 mb-2 mx-5" style="height:75px;">
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Address Line 1" Value="@AddressLine1"/>
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Contact Person" Value="@ContactPerson"/>
            </div>
            <div class="d-flex justify-content-between my-2 mx-5" style="height:75px; margin-right: 115px;">
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Address Line 2" Value="@AddressLine2"/>
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Contact Person Mobile Number" Value="@CPNumber"/>
            </div>
            <div class="d-flex justify-content-between my-2 mx-5" style="height:75px; margin-right: 115px;">
                <DisplayDetailCard Width="400px" Height="60px" FieldName="City" Value="@City"/>
                <DisplayDetailCard Width="400px" Height="60px" FieldName="Contact Person Email Address" Value="@CPEmail"/>
            </div>
        </CardLayout>

        <CardLayout Width="1060px" Height="150px" ClassName="mt-4 pt-2">
            <div class="d-flex justify-content-between mx-5 pt-2 align-items-center" style="height: 40px;">
                <label style="font-size: 16px; color: #4E4E4E; font-family: 'Poppins', sans-serif; font-weight: 500; display: flex; margin-right: 20px">Select Application</label>                       
                <IconButton Width="200px" Height="30px" IconName="fa fa-plus" Text="Add Application" onIconButtonClicked="(()=>IconButtonClick(Constants.AddApplication, Constants.Add))"/>
            </div>
            <div class="d-flex justify-content-between mx-5" style="height:90px; padding-top: 1%;">
                <div class="col-9 d-flex application-items-container px-1 pb-2">
                    @if (Applications.Count() > 0)
                    {
                        foreach (var item in Applications)
                        {
                            <CardLayoutImage Width="150px" Height="75px" Image="@item.ImagePath" Hover= "true" onApplicationButtonClicked="(()=>ApplicationButtonClick(item))"/>
                        }                        
                    }
                </div>
            </div>
        </CardLayout>

    </div>
</div>
