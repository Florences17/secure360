<link href="css/CardLayoutImage.css" rel="stylesheet" type="text/css" />

@if (@Hover == true){
    <div class="item-card-image d-flex justify-content-center align-items-center" style="width: @Width; height: @Height;" @onclick=@ApplicationButtonClicked>
        <img class="item-card-image-image" src="@Image"/>
    </div>
}
else{
    <div class="item-card-image-no-hover d-flex justify-content-center align-items-center" style="width: @Width; height: @Height;">
        <img class="item-card-image-no-hover-image" src="@Image"/>
    </div> 
}


@code{
    [Parameter]
    public string Width {get; set;}

    [Parameter]
    public string Height {get; set;}

    [Parameter]
    public string Image {get; set;}

    [Parameter]
    public string Image_Width {get; set;}

    [Parameter]
    public string Image_Height {get; set;}

    [Parameter]
    public bool Hover {get; set;}

    [Parameter]
    public EventCallback onApplicationButtonClicked { get; set; }

    protected async Task ApplicationButtonClicked()
    {
        await onApplicationButtonClicked.InvokeAsync();
    }
}